<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.sith.spring_lab.models.Department" table="departments" schema="java" catalog="postgres">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="creationDate">
            <column name="creation_date" sql-type="date" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="phoneNumber">
            <column name="phone_number" sql-type="varchar(15)" length="15"/>
        </property>
        <set name="faculties" table="faculties" schema="java" catalog="postgres">
            <key>
                <column name="department" not-null="true"/>
            </key>
            <one-to-many class="com.sith.spring_lab.models.Faculty"/>
        </set>
    </class>
</hibernate-mapping>