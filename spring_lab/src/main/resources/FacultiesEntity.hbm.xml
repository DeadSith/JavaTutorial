<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.sith.spring_lab.models.Faculty" table="faculties" schema="java" catalog="postgres">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="creationDate">
            <column name="creation_date" sql-type="date"/>
        </property>
        <property name="teachers">
            <column name="teachers" sql-type="text" not-null="true"/>
        </property>
        <property name="subjects">
            <column name="subjects" sql-type="text" not-null="true"/>
        </property>
        <many-to-one name="department" class="com.sith.spring_lab.models.Department">
            <column name="department" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>